{
	"name": "web-ruby",
	"description": "Ruby (rails) web server configuration (via NGINX & Thin) - EmpireOne Group",
	"json_class": "Chef::Role",
	"chef_type": "role",

	"default_attributes": {
		"rails": {
			"deploy": {
				"repository": "/vagrant_data/src/engineroom"
			},
			"app": {
				"name": "engineroom",
				"path": "/vagrant_data/src/engineroom",
				"environment": "development"
			}
		},
		"mysql" : {
			"remove_anonymous_users" : true,
			"server_root_password" : "",
			"server_repl_password": "",
			"server_debian_password": ""   	
		},
		"rvm" : {
			"default_ruby" : "ruby-1.9.3-p392",
			"user_default_ruby" : "ruby-1.9.3-p392"
		},
		"solr": {
			"version": "4.3.0"
		}
	},
	
	"override_attributes": {

	},

	"env_run_list": {
	},


	"run_list": [
		"role[base]",
		"recipe[mysql::server]",
		"recipe[nginx]",
		"recipe[rvm::system]",
		"recipe[java]"
		//"recipe[jpackage]"//,
		//"recipe[solr]",
		//"recipe[solr::jetty]"
	]
}